@model TransactionViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: white;
            color: #255D81;
        }
        .search-section {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .table-responsive {
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
        .page-header {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 25px;
        }
        .db-icon {
            width: 32px;
            height: 32px;
        }
        .btn-primary {
            background-color: #255D81;
            border-color: #255D81;
            color: white;
        }
        .btn-primary:hover, .btn-primary:focus {
            background-color: white;
            border-color: #255D81;
            color: #255D81;
        }
        .btn-outline-secondary {
            color: #255D81;
            border-color: #255D81;
        }
        .btn-outline-secondary:hover, .btn-outline-secondary:focus {
            background-color: #255D81;
            color: white;
        }
        .form-control:focus, .form-select:focus {
            border-color: #255D81;
            box-shadow: 0 0 0 0.25rem rgba(37, 93, 129, 0.25);
        }
        .table {
            color: #255D81;
        }
        .page-link {
            color: #255D81;
        }
        .page-item.active .page-link {
            background-color: #255D81;
            border-color: #255D81;
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <!-- Header -->
        <div class="page-header">
            <img src="/resources/transaction1.png alt="Transaction Icon" class="db-icon">
            <h1 class="h2 mb-0">Transaction</h1>
        </div>

        <!-- Search and Filter Section -->
        <div class="search-section">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search transactions...">
                        <button class="btn btn-primary" type="button">
                            Search
                        </button>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="d-flex gap-2">
                        <select class="form-select w-auto">
                            <option value="">Transaction Type</option>
                            <option value="borrow">Borrow</option>
                            <option value="return">Return</option>
                        </select>
                        <input type="date" class="form-control w-auto">
                        <button class="btn btn-outline-secondary" type="button">
                            Clear Filters
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Transaction Table -->
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>T_ID</th>
                        <th>User ID</th>
                        <th>Student Name</th>
                        <th>Book Name</th>
                        <th>Bar Code</th>
                        <th>Transaction Type</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model.Transactions)
                    {
                        <tr>
                            <td>@transaction.TransactionId</td>
                            <td>@transaction.UserId</td>
                            <td>Student Name</td>
                            <td>BookName</td>
                            <td>@transaction.BarCode</td>
                            <td>@transaction.TransactionType</td>
                            <td>@transaction.Date.ToString("dd-MM-yyyy HH:mm:ss")</td>
                            <td>(@transaction.Status==1):"Completed":"Pending"</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav class="mt-4">
            <ul class="pagination justify-content-end">
                @{
                    int totalPages = 10; // This should be calculated based on your data
                    int currentPage = ViewBag.CurrentPage ?? 1;
                    int maxPagesToShow = 5;
                    int startPage = Math.Max(1, currentPage - maxPagesToShow / 2);
                    int endPage = Math.Min(totalPages, startPage + maxPagesToShow - 1);

                    if (currentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-page="@(currentPage - 1)" asp-route-pageSize="@ViewBag.PageSize">Previous</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Previous</span>
                        </li>
                    }

                    for (int i = startPage; i <= endPage; i++)
                    {
                        if (i == currentPage)
                        {
                            <li class="page-item active">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-route-page="@i" asp-route-pageSize="@ViewBag.PageSize">@i</a>
                            </li>
                        }
                    }

                    if (currentPage < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-page="@(currentPage + 1)" asp-route-pageSize="@ViewBag.PageSize">Next</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Next</span>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

