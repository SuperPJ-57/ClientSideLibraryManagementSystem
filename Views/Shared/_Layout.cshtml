<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            overflow-x: hidden; /* Prevent horizontal scrolling */
        }

        .sidebar {
            height: 100vh; /* Full height for the sidebar */
            background-color: #2c3e50;
            color: white;
            padding: 20px;
            position: fixed;
            z-index: 1000;
            overflow-y: auto;
            transition: transform 0.3s ease;
            width: 250px;
            transform: translateX(-250px); /* Initially hidden */
        }

            .sidebar.show {
                transform: translateX(0); /* Show sidebar when toggled */
            }

        .close-btn {
            display: none;
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #2c3e50;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            z-index: 1001;
            font-size: 16px;
        }

            .close-btn:hover {
                background-color: #34495e;
            }

        .hamburger {
            display: block;
            background-color: #2c3e50;
            color: white;
            border-radius: 10%;
            padding: 10px 20px;
            cursor: pointer;
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1001;
            font-size: 16px; /* Keep the button small */
        }

            .hamburger:hover {
                background-color: #34495e;
            }

        .content {
            padding: 20px;
            margin-left: 0; /* No margin initially */
            transition: margin-left 0.3s ease;
            min-height: 100vh; /* Ensure it spans full height */
        }

            .content.show {
                margin-left: 250px; /* Adjust margin when sidebar is shown */
            }

        @@media (min-width: 769px) {
            .sidebar {
                transform: translateX(0); /* Keep sidebar open on larger screens */
            }

            .content {
                margin-left: 250px; /* Adjust content for larger screens */
            }

            .close-btn {
                display: none; /* Hide close button on larger screens */
            }

            .hamburger {
                display: none; /* Hide hamburger button on larger screens */
            }
        }
    </style>
</head>
<body>
    <button class="hamburger" id="hamburger">&#9776;</button>
    <div class="sidebar" id="sidebar">
        <button class="close-btn" id="close-btn">&times;</button>
        <h4>HSMSS Library</h4>
        <a href="#" class="tab-link" data-url="/Dashboard/Index">Dashboard</a>
        <a href="#" class="tab-link" data-url="/Author/Index">Author</a>
        <a href="#" class="tab-link" data-url="/Books/Index">Books</a>
        <a href="#" class="tab-link" data-url="/Students/Index">Students</a>
        <a href="#" class="tab-link" data-url="/Transaction/Index">Transaction</a>
        <a href="#" class="tab-link" data-url="/Issuing/Index">Issuing</a>
        <a href="#" class="tab-link" data-url="/Settings/Index">Settings</a>
        <a href="#" class="tab-link" data-url="/Account/Logout">Log Out</a>
    </div>
    <div class="container-fluid">
        <main role="main" class="content" id="main-content">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#hamburger').on('click', function () {
                $('#sidebar').addClass('show'); // Show sidebar
                $('#main-content').addClass('show'); // Adjust content layout
                $(this).hide(); // Hide hamburger button
                $('#close-btn').show(); // Show close button
            });

            $('#close-btn').on('click', function () {
                $('#sidebar').removeClass('show'); // Hide sidebar
                $('#main-content').removeClass('show'); // Adjust content layout
                $(this).hide(); // Hide close button
                $('#hamburger').show(); // Show hamburger button
            });

            $('.tab-link').on('click', function (e) {
                e.preventDefault();
                var url = $(this).data('url');
                $.get(url, function (data) {
                    $('#main-content').html(data);
                });
                $('#sidebar').removeClass('show'); // Hide sidebar
                $('#main-content').removeClass('show'); // Adjust content layout
                $('#close-btn').hide(); // Hide close button
                $('#hamburger').show(); // Show hamburger button
            });
        });
    </script>
</body>
</html>
