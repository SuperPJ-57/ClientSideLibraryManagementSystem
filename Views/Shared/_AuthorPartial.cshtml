@model AuthorViewModel
@{
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Author Management</title>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            overflow-x: hidden;
        }

        .sidebar a:hover {
            background-color: #34495e;
            color: white;
            text-decoration: none;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
        }

        .form-section, .table-section {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .form-section h2, .table-section h2 {
                margin-bottom: 20px;
            }

        .form-control {
            margin-bottom: 15px;
        }

        @@media (max-width: 768px) {
            .container {
                padding: 0 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-section">
            <h2>Author Info</h2>
            <form asp-action="AddAuthor" asp-controller="Author" method="post">
                
                <div class="form-group">
                    <label for="Name">Author Name</label>
                    <input type="text" class="form-control" id="Name" name="AddBookModel.Name" placeholder="Enter author name">
                </div>
                <div class="form-group">
                    <label for="Bio">Bio</label>
                    <textarea class="form-control" id="Bio" name="AddBookModel.Bio" rows="3" placeholder="Enter author bio"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" style="background:#255D81">ADD AUTHOR</button>
            </form>
        </div>
        <div class="table-section mt-4">
            <h2>Author Details</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Author ID</th>
                        <th>Name</th>
                        <th>Bio</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var author in Model.Authors)
                    {
                        <tr>
                            <td>@author.AuthorId</td>
                            <td>@author.Name</td>
                            <td>@author.Bio</td>
                            <td>
                                <button class="btn btn-warning btn-sm">Edit</button>
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
